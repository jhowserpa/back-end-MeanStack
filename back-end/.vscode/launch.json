{
        "version": "0.2.0",
        "configurations": [

            {
                "type": "node",
                "request": "launch",
                "name": "Launch Program",
                "program": "${workspaceRoot}\\app.js", 
                "stopOnEntry": false,
                "args": [],
                "preLaunchTask": null,
                "runtimeExecutable": null,
                "runtimeArgs": [
                    "--nolazy"
                ],
                "env":{
                    "NODE_ENV":"development"
                },
                "externalConsole":false,
                "sourceMaps": true,
                "outDir": "${workspaceRoot}/jsScripts"
            },
            {
                "name": "Attach to Process",
                "type":"node",
                "request": "attach",
                "port": 5858,
                "address": "localhost",
                "restart": false,                
                "sourceMaps": false,
                "outDir": null,
                "localRoot": "${workspaceRoot}",
                "remoteRoot": null

            }
        ]
    }